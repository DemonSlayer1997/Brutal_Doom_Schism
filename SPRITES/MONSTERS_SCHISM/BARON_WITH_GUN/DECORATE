ACTOR GunBaron
{ 
  Health 1000
  Radius 24
  Height 64
  Mass 1000
  Speed 12
  PainChance 50
  Monster
  +FLOORCLIP
  +BOSSDEATH
  +shortmissilerange
  scale 0.75
  SeeSound "baron/sight"
  PainSound "baron/pain"
  DeathSound "baron/death"
  ActiveSound "baron/active"
  Obituary "%o was no match for Baron Javelin Thrower."
  States
  {
  Spawn:
    SKIR AB 10 A_Look
    Loop
  See:
    SKIR A 0 a_jumpifinventory("baronjavelinammo",4,"spearsee")
    SKIR AAABBBCCCDDD 2 A_Chase
    Loop
  Spearsee:
  SKI2 AAABBBCCCDDD 2 A_Chase
  loop
  Melee:
  SKIR E 0 a_jumpifinventory("baronjavelinammo",4,"spearmelee")
  Missile:
    SKIR E 0 a_jumpifinventory("baronjavelinammo",4,"spearsee")
    SKIR E 8 A_FaceTarget
    SKIR F 0 A_giveinventory("baronjavelinammo",1)
    SKIR F 8 A_custommissile("baronjavelin",56,16,0)
    SKIR G 8 A_facetarget
    Goto See
  Spearmelee:
  SKI2 EF 5 a_facetarget
  SKI2 G 5 A_CustomMeleeAttack(random(5,15)*8,"skeleton/melee","none")
  goto see
  Pain:
    SKIR A 0 a_jumpifinventory("baronjavelinammo",4,"spearpain")
    SKIR A 2 
    SKIR A 2 a_pain
    Goto See
 
 spearPain:
    
    SKI2 A 2
    SKI2 A 2 a_pain
    Goto See
 
  Death:
    SKIR H 8
    SKIR I 8 A_Scream
    SKIR J 8
    SKIR K 8 A_NoBlocking
    SKIR L 8
    SKIR M -1 A_BossDeath
    Stop 
  }
}
ACTOR Baronjavelin
{ 
  Radius 6
  Height 16
  Speed 35
  Damage 14
  Projectile
  +RANDOMIZE
  RenderStyle translucent
  Alpha 1
  -nogravity
  +lowgravity
  SeeSound "baron/attack"
  DeathSound "baron/shotx"
  Decal "BaronScorch"
  States
  {
  Spawn:
    JAVE B 1 Bright
    JAVE BAC 7 Bright
    JAVE CCC 10
    goto death
  Death:
    JAVE C 6 Bright
    Stop
  }
}
actor Baronjavelinammo : Inventory
{
Inventory.MaxAmount 4
+INVENTORY.UNDROPPABLE
}
