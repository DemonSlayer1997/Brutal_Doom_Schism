ACTOR ReiverImp
{
  
  Health 150
  Radius 31
  Height 56
  Mass 400
  Speed 16
  PainChance 128
  Monster
  +FLOAT
  +NOGRAVITY
  scale 0.85
  SeeSound "caco/sight"
  PainSound "caco/pain"
  DeathSound "caco/death"
  ActiveSound "caco/active"
  Obituary "%o was killed by Reiver Imp."
  States
  {
  Spawn:
    REIM A 10 A_Look
    Loop
  See:
    REIM AABBCCDD 3 A_Chase
    Loop
  Melee:
    REIM EF 7 A_FaceTarget
    REIM G 7 Bright A_CustomMeleeAttack(random(1,10)*5,"skeleton/melee","none") 
   
    Goto See
  Pain:
    REIM E 3
    REIM E 3 A_Pain
    REIM E 6
    Goto See
  Death:
    REIM H 5
    REIM I 5 A_Scream
    REIM JKLMN 5
    REIM O 5 A_NoBlocking
    REIM PQ 3 A_SetFloorClip
    Stop
  
  }
}
