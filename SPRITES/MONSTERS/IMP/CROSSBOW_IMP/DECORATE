
ACTOR crossbowimparmored
{
  
  Health 90
  Radius 20
  Height 56
  Mass 100
  Speed 8
  PainChance 200
  Monster
  +FLOORCLIP
  +missilemore
  +missileevenmore
  minmissilechance 20
  
  
  SeeSound "imp/sight"
  PainSound "imp/pain"
  DeathSound "imp/death"
  ActiveSound "imp/active"
  HitObituary "$OB_IMPHIT"
  Obituary "$OB_IMP"
  States
  {
  Spawn:
    CRIM AB 10 A_Look
    Loop
  See:
    CRIM AABBCCDD 3 A_Chase
    Loop
  Melee:
  Missile:
    CRIM EE 8 A_FaceTarget
    CRIM E 6 A_custommissile("impbolt",38,0,0)
    Goto See
  Pain:
    CRIM A 2
    CRIM A 2 A_Pain
    Goto See
  Death:
    CRIM G 8
    CRIM H 8 A_Scream
    CRIM I 6
    CRIM J 6 A_NoBlocking
    CRIM K -1
    Stop

  Raise:
    CRIM GHIJK 8
    Goto See
  }
}
