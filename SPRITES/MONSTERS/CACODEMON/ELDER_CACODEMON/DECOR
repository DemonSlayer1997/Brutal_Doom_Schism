ACTOR CacoHands
{
  Health 400
  Radius 31
  Height 56
  Mass 400
  Speed 9
  PainChance 128
  Monster
  +FLOAT
  +NOGRAVITY
  +missilemore
  +missileevenmore
  minmissilechance 2
  SeeSound "caco/sight"
  PainSound "caco/pain"
  DeathSound "caco/death"
  ActiveSound "caco/active"
  Obituary "%o was killed by a Doom Cacodemon"
  bloodcolor blue
  States
  {
  Spawn:
    CAHA A 10 A_Look
    Loop
  See:
    CAHA A 3 A_Chase
    Loop
  Missile:
    CAHA A 0 a_jumpifhealthlower(200,"FatsoAttack")
    CAHA A 0 a_jump(256,"leftattack","rightattack")
    RightAttack:
    CAHA EF 5 A_FaceTarget
    CAHA G 0 Bright a_custommissile("DoomImpBall",29,20,2)
    CAHA G 5 Bright a_custommissile("CacodemonBall",24,0,0)
    Goto See
    LeftAttack:
    CAHA HI 5 A_FaceTarget
    CAHA J 0 Bright a_custommissile("DoomImpBall",29,-20,-2)
    CAHA J 5 Bright a_custommissile("CacodemonBall",24,0,0)
    Goto See
    
    
    FatsoAttack:
    CAHA E 0 a_changeflag("NOPAIN",1)
    CAHA EF 5 A_FaceTarget
    CAHA G 0 Bright a_custommissile("DoomImpBall",29,20,2)
    CAHA G 5 Bright a_custommissile("CacodemonBall",24,0,0)
    CAHA HI 5 A_FaceTarget
    CAHA J 0 Bright a_custommissile("DoomImpBall",29,-20,-2)
    CAHA J 5 Bright a_custommissile("CacodemonBall",24,0,0)   
    CAHA BC 5 A_FaceTarget
    CAHA D 0 Bright a_custommissile("DoomImpBall",29,-20,-2)
    CAHA D 0 Bright a_custommissile("DoomImpBall",29,20,2)
    CAHA D 5 Bright a_custommissile("CacodemonBall",24,0,0)
    CAHA D 0 a_changeflag("NOPAIN",0)
    Goto See
    
  Pain:
    CAHA K 3
    CAHA K 3 A_Pain
    CAHA K 6
    Goto See
  Death:
    CAHA L 8
    CAHA M 8 A_Scream
    CAHA NO 8
    CAHA P 8 A_NoBlocking
    CAHA Q -1 A_SetFloorClip
    Stop 
  }
}
